<Window x:Class="Btx.Client.Test.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Btx.Client.Test.Views"
        xmlns:vm="clr-namespace:Btx.Client.Test.ViewModels"
        mc:Ignorable="d"
        Title="Btx Test Client v1.0" Height="447.14" Width="649.364">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="337*"/>
        </Grid.RowDefinitions>
        <Button Content="Connect" 
                Command="{Binding ConnectCommand}"
                HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="111"/>
        <TextBox Text="{Binding LogMessages,Mode=OneWay}" Grid.Row="1" TextWrapping="Wrap" IsReadOnly="True" Margin="10"/>
    </Grid>
</Window>

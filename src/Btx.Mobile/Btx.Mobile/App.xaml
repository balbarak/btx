<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:Btx.Mobile.Helpers"
             x:Class="Btx.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="Primary">#01579b</Color>
            <Color x:Key="PrimaryDark">#002f6c</Color>
            <Color x:Key="PrimaryLight">#4f83cc</Color>
            <Color x:Key="PrimaryText">#ffffff</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="{StaticResource PrimaryText}" />
            </Style>

            <OnPlatform x:Key="IconFont"
                        x:TypeArguments="x:String"
                        Android="material-icon-font.ttf#Material-Design-Iconic-Font"
                        iOS="NotoKufiArabic" />


            
        </ResourceDictionary>
    </Application.Resources>
</Application>